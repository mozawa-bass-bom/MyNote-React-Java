<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mynote.app.domain.mapper.UserPasswordMapper">

  <resultMap id="UserPasswordMap" type="com.mynote.app.domain.entity.UserPassword">
    <id property="userId" column="user_id"/>
    <result property="passwordHash" column="password_hash"/>
    <result property="updatedAt" column="updated_at"/>
  </resultMap>

  <select id="findByUserId" parameterType="long" resultMap="UserPasswordMap">
    SELECT * FROM user_passwords WHERE user_id = #{userId}
  </select>

  <insert id="insert" parameterType="com.mynote.app.domain.entity.UserPassword">
    INSERT INTO user_passwords (user_id, password_hash, updated_at)
    VALUES (#{userId}, #{passwordHash}, NOW())
  </insert>

  <update id="update" parameterType="com.mynote.app.domain.entity.UserPassword">
    UPDATE user_passwords
    SET password_hash = #{passwordHash}, updated_at = NOW()
    WHERE user_id = #{userId}
  </update>

</mapper>
